{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "declarationDir": "typings",
        "declarationMap": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "newLine": "lf",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "esnext"
    }
}
